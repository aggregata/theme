{
    "name": "aggregata",
    "description": "A custom theme for aggregata.de",
    "version": "0.1.0",
    "type": "module",
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "rspack serve",
        "build": "rspack build",
        "pretest": "npm run build",
        "test": "npx gscan .",
        "zip": "npm run build && bestzip 'aggregata.zip' 'assets/*' 'partials/*' 'members/*' 'pages/*' 'routes/*' '*.hbs' 'package.json'",
        "sync": "browser-sync 'http://localhost:2368' 'assets/globals.js' -w",
        "prettier": "prettier **/*.{css,hbs,js,scss,ts,vue} --write",
        "report": "npx unlighthouse --site 'localhost:2368'"
    },
    "author": {
        "name": "Jairus Joer",
        "email": "hello@jairusjoer.com",
        "url": "https://jairusjoer.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog",
            "Minimal",
            "Modern"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/aggregata/aggregata"
    },
    "dependencies": {
        "@iconoir/vue": "^7.10.1",
        "alpinejs": "^3.14.8",
        "highlight.js": "^11.11.1",
        "katex": "^0.16.21",
        "plotly.js-dist": "^2.35.3",
        "vue": "^3.5.12"
    },
    "devDependencies": {
        "@catppuccin/highlightjs": "^1.0.0",
        "@rspack/cli": "^1.2.2",
        "@rspack/core": "^1.2.2",
        "@tailwindcss/typography": "^0.5.16",
        "@types/alpinejs": "^3.13.11",
        "@types/postcss-import": "^14.0.3",
        "alpinejs": "^3.14.8",
        "autoprefixer": "^10.4.20",
        "bestzip": "^2.2.1",
        "browser-sync": "^3.0.3",
        "copy-webpack-plugin": "^12.0.2",
        "css-loader": "^7.1.2",
        "mini-css-extract-plugin": "^2.9.2",
        "postcss": "^8.5.1",
        "postcss-import": "^16.1.0",
        "postcss-loader": "^8.1.1",
        "prettier": "^3.5.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "sass": "^1.84.0",
        "sass-loader": "^14.2.1",
        "tailwindcss": "^3.4.17",
        "ts-loader": "^9.5.2",
        "typescript": "^5.7.3",
        "vue-loader": "^17.4.2",
        "webpack": "^5.97.1"
    },
    "config": {
        "card_assets": {
            "exclude": [
                "blockquote",
                "bookmark",
                "button",
                "callout",
                "file",
                "nft",
                "product"
            ]
        },
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 240
            },
            "sm": {
                "width": 480
            },
            "md": {
                "width": 720
            },
            "lg": {
                "width": 960
            }
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ],
        "overrides": [
            {
                "files": "**/*.hbs",
                "options": {
                    "parser": "glimmer"
                }
            }
        ]
    }
}
