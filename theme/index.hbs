{{!< default}}

<div class="py-18 px-6">
    <header class="max-w-[45rem] text-center">
        <div class="px-6 py-18 bg-gradient-to-b from-background-subtle to-transparent rounded-xl">
            <h1 class="text-h4 font-medium text-foreground leading-tight">
                {{t "We write about current software and standards" }}
            </h1>
            <h2 class="mt-3 text-balance">
                {{t "Aggregata is a platform for the web, applications, and machine learning, which discusses current trends and topics." }}
            </h2>
        </div>
    </header>

    {{#unless @member.paid}}
        <vue-placement class="my-18">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9406821308459344" crossorigin="anonymous"></script>
            <ins class="adsbygoogle"
                style="display:block"
                data-ad-client="ca-pub-9406821308459344"
                data-ad-slot="5548510304"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </vue-placement>
    {{/unless}}

    <main class="mt-18 max-w-[45rem]">
        <section class="space-y-12">
            {{#foreach posts}}
                <hr>
                {{> post page=../pagination.page }}
            {{/foreach}}
            {{ pagination }}
        </section>
    </main>

    {{#unless @member.paid}}
        <vue-placement class="my-18">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9406821308459344" crossorigin="anonymous"></script>
            <ins class="adsbygoogle"
                style="display:block"
                data-ad-client="ca-pub-9406821308459344"
                data-ad-slot="5548510304"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </vue-placement>
    {{/unless}}
</div>