{{!< default}}

<div class="py-18 px-6">


    {{#tag}}
        <header
            class="max-w-[45rem] text-center text-balance p-6 bg-gradient-to-b from-background-subtle to-transparent rounded-xl">
            {{#if feature_image}}
                <img class="mx-auto border rounded-full size-24" src="{{img_url feature_image format='avif' size='xs' }}"
                    alt="{{name}}" />
            {{/if}}
            <h1 class="mt-6 text-h4 font-medium text-foreground leading-tight">{{name}}</h1>
            {{#if description}}
                <p class="mt-6 text-h6">{{description}}</p>
            {{/if}}
            <div class="flex gap-1 flex-wrap justify-center mt-6 text-sm font-medium leading-6">
                <span class="bg-background-subtle px-2 rounded-md">
                    {{plural ../pagination.total empty='Articles' singular='% Article' plural='% Articles'}}
                </span>
            </div>
            <a class="inline-block mt-3 text-xs leading-6 px-2 text-foreground underline" href="/authors/">{{t 'Discover all authors'}}</a>
        </header>

    {{/tag}}

    <main class="mt-18 max-w-[45rem]">
        <section class="space-y-12">
            {{#foreach posts}}
                <hr>
                {{> post page=../pagination.page }}
            {{/foreach}}
            {{ pagination }}
        </section>
    </main>
</div>