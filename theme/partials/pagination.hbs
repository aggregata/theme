<nav class="flex justify-center items-center gap-3" role="navigation">
    <a class="button-primary is-icon" href="{{page_url prev}}" {{#unless prev}}disabled{{/unless}}>
        {{> icon icon="nav-arrow-left" }}
    </a>
    <span class="text-sm">Page {{page}} of {{pages}}</span>
    <a class="button-primary is-icon" href="{{page_url next}}" {{#unless next}}disabled{{/unless}}>
        {{> icon icon="nav-arrow-right" }}
    </a>
</nav>