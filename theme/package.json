{
    "name": "aggregata",
    "description": "A custom theme for aggregata.de",
    "version": "6.0.1",
    "type": "module",
    "engines": {
        "ghost": ">=6.0.0"
    },
    "license": "MIT",
    "screenshots": {
        "desktop": "assets/screenshot-desktop.jpg"
    },
    "scripts": {
        "dev": "rspack serve",
        "build": "rspack build",
        "pretest": "npm run build",
        "test": "npx gscan .",
        "zip": "npm run build && bestzip '../aggregata.zip' 'assets/*' 'partials/*' 'members/*' 'pages/*' 'routes/*' '*.hbs' '*.txt' 'package.json'",
        "sync": "browser-sync 'http://localhost:2368' 'assets/globals.js' -w",
        "prettier": "prettier '**/*.{css,hbs,js,scss,ts,vue}' '!assets/**' '!node_modules/**' --write",
        "report": "npx unlighthouse --site 'localhost:2368'"
    },
    "author": {
        "name": "Jairus Joer",
        "email": "hello@jairusjoer.com",
        "url": "https://jairusjoer.com"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog",
            "Minimal",
            "Modern"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/aggregata/aggregata"
    },
    "dependencies": {
        "@iconoir/vue": "^7.11.0",
        "@rspack/cli": "^1.5.5",
        "@rspack/core": "^1.5.5",
        "@tailwindcss/typography": "^0.5.18",
        "alpinejs": "^3.15.0",
        "autoprefixer": "^10.4.21",
        "css-loader": "^7.1.2",
        "js-confetti": "^0.12.0",
        "katex": "^0.16.22",
        "plotly.js-dist": "^2.35.3",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "postcss-loader": "^8.2.0",
        "sass": "^1.93.0",
        "sass-loader": "^14.2.1",
        "shiki": "^3.13.0",
        "tailwindcss": "^3.4.17",
        "typescript": "^5.9.2",
        "vue": "^3.5.21",
        "vue-loader": "^17.4.2"
    },
    "devDependencies": {
        "@types/alpinejs": "^3.13.11",
        "@types/postcss-import": "^14.0.3",
        "bestzip": "^2.2.1",
        "browser-sync": "^3.0.4",
        "prettier": "^3.6.2",
        "prettier-plugin-tailwindcss": "^0.6.14"
    },
    "config": {
        "card_assets": {
            "exclude": [
                "blockquote",
                "bookmark",
                "button",
                "callout",
                "file",
                "nft",
                "product"
            ]
        },
        "posts_per_page": 12,
        "image_sizes": {
            "xs": {
                "width": 240
            },
            "sm": {
                "width": 480
            },
            "md": {
                "width": 720
            },
            "lg": {
                "width": 960
            }
        }
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "singleQuote": true,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ],
        "overrides": [
            {
                "files": "**/*.hbs",
                "options": {
                    "parser": "glimmer"
                }
            }
        ]
    }
}
