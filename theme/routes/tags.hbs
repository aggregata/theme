{{!< ../default}}

<div class='mx-auto w-full max-w-[48rem] px-6 py-18'>
    <header class='w-full text-center'>
        <div class='rounded-xl bg-gradient-to-b from-background-subtle to-transparent px-6 py-18'>
            <h1 class='text-h4 font-medium leading-tight text-foreground'>
                {{t 'Tags'}}
            </h1>
        </div>
    </header>

    {{#unless @member.paid}}
        <vue-placement class="my-18">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9406821308459344" crossorigin="anonymous"></script>
            <ins class="adsbygoogle"
                data-ad-client="ca-pub-9406821308459344"
                data-ad-slot="5548510304"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </vue-placement>
    {{/unless}}

    <main class='mt-18'>
        <section class='space-y-2'>
            {{#get 'tags' include='count.posts'}}
                {{#foreach tags}}
                    <a
                        class='block rounded-xl border p-3 transition-colors hover:bg-background-subtle focus:bg-background-subtle'
                        href='{{url}}'
                        title='{{description}}'
                    >
                        <div class='flex items-center gap-3 font-medium leading-6'>
                            <h2 class='truncate text-foreground'>{{name}}</h2>
                            <span
                                class='ml-auto block min-w-6 shrink-0 whitespace-nowrap rounded-md bg-background-subtle px-2 text-center text-sm'
                            >
                                {{plural
                                    count.posts
                                    empty='0 Articles'
                                    singular='% Article'
                                    plural='% Articles'
                                }}</span>
                        </div>
                    </a>
                {{/foreach}}
            {{/get}}
        </section>
    </main>

    {{#unless @member.paid}}
        <vue-placement class="mt-18">
            <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9406821308459344" crossorigin="anonymous"></script>
            <ins class="adsbygoogle"
                data-ad-client="ca-pub-9406821308459344"
                data-ad-slot="5548510304"
                data-ad-format="auto"
                data-full-width-responsive="true"></ins>
            <script>(adsbygoogle = window.adsbygoogle || []).push({});</script>
        </vue-placement>
    {{/unless}}
</div>