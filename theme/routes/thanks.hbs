{{!< ../default}}

<div class='mx-auto grid max-w-[48rem] grow px-6 py-18' x-data="thanks">
    <main class='grid justify-items-center content-center rounded-xl bg-gradient-to-b from-background-subtle to-transparent px-6 py-18'>
        <header class="text-center">
            <h1 class='text-h4 font-medium leading-tight text-foreground'>
                {{t 'Thank you for your support'}}
                {{#if @member}}
                    <strong>{{@member.email}}</strong>
                {{/if}}
            </h1>
            <h2 class='mt-3 text-balance'>{{t 'Your support is greatly appreciated and helps us continue to provide the best content for you.'}}</h2>
        </header>

        <a class='mt-6 button-primary' href='/'>
            {{> icon icon='arrow-left' }}
            {{t 'Back to homepage'}}
        </a>
    </main>
</div>