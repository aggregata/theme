{{!< default}}

{{#post}}
    <div class="py-18 px-6">
        {{#match @page.show_title_and_feature_image}}
            <header class="max-w-[45rem]">

                {{#if feature_image}}
                    <img class="mb-6 aspect-video w-full rounded-xl border"
                        src="{{img_url feature_image format='avif' size='md'}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
                {{/if}}

                <div
                    class="py-18 px-6 text-balance text-center bg-gradient-to-b from-background-subtle to-transparent rounded-xl">
                        <h1 class="text-h4 font-medium text-foreground leading-tight">{{title}}</h1>
                        <h2 class="mt-6 text-h6">{{excerpt}}</h2>
                </div>

            </header>
        {{/match}}

        <main class="mt-18 max-w-[45rem]">
            <section class="rich-text">
                {{content}}
            </section>
        </main>
    </div>
{{/post}}